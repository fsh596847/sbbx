<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white" >

    <RelativeLayout
        android:id="@+id/evaluate_tab"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_layout_height_tab"
        android:background="@color/color_major_blue_tab" >

        <ImageView
            android:id="@+id/iv_doctor_evaluate_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:contentDescription="@null"
            android:paddingLeft="@dimen/activity_padding_tab"
            android:paddingRight="@dimen/activity_padding_tab"
            android:src="@drawable/back_w" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="评价详情"
            android:textColor="@android:color/white"
            android:textSize="@dimen/tab" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/evaluate_tab"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/evaluate_line_xx"
                android:layout_width="match_parent"
                android:layout_height="@dimen/activity_layout_height_tab" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:background="@color/color_gray_bg" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@color/color_white"
                    android:padding="4dp"
                    android:text="当前评价"
                    android:textColor="@color/color_gray"
                    android:textSize="@dimen/default_x" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/evaluate_xx"
                android:layout_width="match_parent"
                android:layout_height="@dimen/activity_layout_height_tab"
                android:gravity="center" >

                <ImageView
                    android:id="@+id/iv_evaluate_xx1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@null"
                    android:padding="8dp"
                    android:src="@drawable/xx_g" />

                <ImageView
                    android:id="@+id/iv_evaluate_xx2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@null"
                    android:padding="8dp"
                    android:src="@drawable/xx_g" />

                <ImageView
                    android:id="@+id/iv_evaluate_xx3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@null"
                    android:padding="8dp"
                    android:src="@drawable/xx_g" />

                <ImageView
                    android:id="@+id/iv_evaluate_xx4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@null"
                    android:padding="8dp"
                    android:src="@drawable/xx_g" />

                <ImageView
                    android:id="@+id/iv_evaluate_xx5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@null"
                    android:padding="8dp"
                    android:src="@drawable/xx_g" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/evaluate_line_judge"
                android:layout_width="match_parent"
                android:layout_height="@dimen/activity_layout_height_tab" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:background="@color/color_gray_bg" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@color/color_white"
                    android:padding="4dp"
                    android:text="请选择标签"
                    android:textColor="@color/color_gray"
                    android:textSize="@dimen/default_x" />
            </RelativeLayout>

            <ListView
                android:id="@+id/listView_evaluate_judge"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:divider="@null"
                android:dividerHeight="0dp"
                android:paddingBottom="4dp"
                android:paddingTop="4dp"
                android:scrollbars="none" >
            </ListView>

            <EditText
                android:id="@+id/et_evaluate"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:background="@drawable/corners_patient_add_edittext"
                android:hint=""
                android:imeOptions="actionDone"
                android:inputType="none"
                android:maxLength="200"
                android:padding="8dp"
                android:textColor="@color/color_gray_light"
                android:textSize="@dimen/default_x" >
            </EditText>

            <Button
                android:id="@+id/btn_evaluate"
                android:layout_width="match_parent"
                android:layout_height="@dimen/activity_layout_height_tab"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:background="@color/color_minor"
                android:textColor="@color/color_white"
                android:textSize="@dimen/main_x"
                android:text="提交评价" />

            <TextView
                android:id="@+id/tv_evaluate_call"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="6dp"
                android:layout_marginTop="16dp"
                android:drawableTop="@drawable/call_evaluate"
                android:paddingBottom="16dp"
                android:text="联系客服"
                android:textColor="@color/color_gray_light"
                android:textSize="@dimen/main_x" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>