<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color_gray_bg" >
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/color_major_blue" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="我的"
            android:textColor="@color/color_white"
            android:textSize="@dimen/main_x" />

        <Button
            android:id="@+id/btn_doc_my_exit"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:text="退出账号" 
            android:paddingRight="12dp"
            android:paddingLeft="12dp"
            android:textColor="@color/color_white"
            android:textSize="@dimen/main"/>

    </RelativeLayout>
    
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_white"
                android:padding="12dp"
                android:layout_marginBottom="12dp" >

                <ImageView
                    android:id="@+id/ImageView_engineer_my_head"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:background="@color/color_gray_bg"
                    android:layout_centerVertical="true"
                    android:contentDescription="@null" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/ImageView_engineer_my_head"
                    android:layout_centerVertical="true"
                    android:paddingLeft="12dp"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/tv_doc_my_info_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_gray_deep"
                        android:textSize="@dimen/main" />
                    
                </LinearLayout>

            </RelativeLayout>
            
            <RelativeLayout
                android:id="@+id/layout_doc_my_info"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@color/color_white"
                android:paddingLeft="12dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:drawableLeft="@drawable/h_info"
                    android:drawablePadding="12dp"
                    android:gravity="center_vertical"
                    android:text="我的资料"
                    android:textColor="@color/color_gray_deep"
                    android:textSize="@dimen/main" />
                
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/color_gray_bg" />

            </RelativeLayout>
            
            <RelativeLayout
                android:id="@+id/layout_doc_my_order"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@color/color_white"
                android:paddingLeft="12dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:drawableLeft="@drawable/h_order"
                    android:drawablePadding="12dp"
                    android:gravity="center_vertical"
                    android:text="我的订单"
                    android:textColor="@color/color_gray_deep"
                    android:textSize="@dimen/main" />
                
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/color_gray_bg" />

            </RelativeLayout>
            
            <RelativeLayout
                android:id="@+id/layout_doc_my_share"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@color/color_white"
                android:paddingLeft="12dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:drawableLeft="@drawable/h_share"
                    android:drawablePadding="12dp"
                    android:gravity="center_vertical"
                    android:text="我的分享"
                    android:textColor="@color/color_gray_deep"
                    android:textSize="@dimen/main" />
                
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/color_gray_bg" />

            </RelativeLayout>
            
            <RelativeLayout
                android:id="@+id/layout_doc_about_us"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@color/color_white"
                android:paddingLeft="12dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:drawableLeft="@drawable/h_about"
                    android:drawablePadding="12dp"
                    android:gravity="center_vertical"
                    android:text="关于我们"
                    android:textColor="@color/color_gray_deep"
                    android:textSize="@dimen/main" />
                
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:text="1.2.3"
                    android:paddingRight="12dp"
                    android:textColor="@color/color_gray_light"
                    android:textSize="@dimen/main" />
                
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/color_gray_bg" />

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>