<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/activity_layout_height_tab"
    android:padding="@dimen/activity_padding_tab"
    android:background="@color/color_white" >

    <TextView
        android:id="@+id/textView_order_calendar_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_gray_light"
        android:textSize="@dimen/main" />
    
    <TextView
        android:id="@+id/textView_order_calendar_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@color/color_major_blue"
        android:paddingLeft="8dp"
        android:paddingTop="4dp"
        android:paddingRight="8dp"
        android:paddingBottom="8dp"
        android:textColor="@color/color_white"
        android:textSize="@dimen/tab" />
    
    <TextView
        android:id="@+id/textView_order_calendar_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView_order_calendar_name"
        android:textColor="@color/color_gray"
        android:textSize="@dimen/default_x" />

</RelativeLayout>
