<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layout_repairs" >

    <ScrollView
        android:id="@+id/scrollView_repairs"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:background="@color/color_white" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@color/color_major_blue" />
            
            <RelativeLayout 
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:paddingRight="8dp"
                android:paddingLeft="8dp">
                
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="设备编号"
                    android:textSize="@dimen/main"
                    android:textColor="@color/color_gray_deep" />
                
                <TextView
                    android:id="@+id/tv_repairs_equipSeq"
                    android:layout_width="wrap_content"
                    android:layout_height="34dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/main"
                    android:textColor="@color/color_gray_light" />
                
            </RelativeLayout>
            
            <RelativeLayout 
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:paddingRight="8dp"
                android:paddingLeft="8dp">
                
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="设备名称"
                    android:textSize="@dimen/main"
                    android:textColor="@color/color_gray_deep" />
                
                <TextView
                    android:id="@+id/tv_repairs_equipName"
                    android:layout_width="wrap_content"
                    android:layout_height="34dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/main"
                    android:textColor="@color/color_gray_light" />
                
            </RelativeLayout>
            
            <RelativeLayout 
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:paddingRight="8dp"
                android:paddingLeft="8dp">
                
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="设备型号"
                    android:textSize="@dimen/main"
                    android:textColor="@color/color_gray_deep" />
                
                <TextView
                    android:id="@+id/tv_repairs_equipBar"
                    android:layout_width="wrap_content"
                    android:layout_height="34dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/main"
                    android:textColor="@color/color_gray_light" />
                
            </RelativeLayout>
            
            <RelativeLayout 
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:paddingRight="8dp"
                android:paddingLeft="8dp">
                
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="所属医院"
                    android:textSize="@dimen/main"
                    android:textColor="@color/color_gray_deep" />
                
                <TextView
                    android:id="@+id/tv_repairs_hospital"
                    android:layout_width="wrap_content"
                    android:layout_height="34dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/main"
                    android:textColor="@color/color_gray_light" />
                
            </RelativeLayout>
            
            <RelativeLayout 
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:paddingRight="8dp"
                android:paddingLeft="8dp">
                
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="所属科室"
                    android:textSize="@dimen/main"
                    android:textColor="@color/color_gray_deep" />
                
                <TextView
                    android:id="@+id/tv_repairs_depar"
                    android:layout_width="wrap_content"
                    android:layout_height="34dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/main"
                    android:textColor="@color/color_gray_light" />
                
            </RelativeLayout>
            
            <RelativeLayout 
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:paddingRight="8dp"
                android:paddingLeft="8dp">
                
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="设备位置"
                    android:textSize="@dimen/main"
                    android:textColor="@color/color_gray_deep" />
                
                <TextView
                    android:id="@+id/tv_repairs_equipAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="34dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/main"
                    android:textColor="@color/color_gray_light" />
                
            </RelativeLayout>
            
            <RelativeLayout 
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:paddingRight="8dp"
                android:paddingLeft="8dp">
                
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="报修人"
                    android:textSize="@dimen/main"
                    android:textColor="@color/color_gray_deep" />
                
                <TextView
                    android:id="@+id/tv_repairs_man"
                    android:layout_width="wrap_content"
                    android:layout_height="34dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/main"
                    android:textColor="@color/color_gray_light" />
                
            </RelativeLayout>
            
            <RelativeLayout
                android:id="@+id/ll_repairs_time" 
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:paddingRight="8dp"
                android:paddingLeft="8dp">
                
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="预约时间"
                    android:textSize="@dimen/main"
                    android:textColor="@color/color_gray_deep" />
                
                <TextView
                    android:id="@+id/tv_repairs_time"
                    android:layout_width="wrap_content"
                    android:layout_height="34dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/main"
                    android:textColor="@color/color_gray_light" />
                
            </RelativeLayout>
            
            <RelativeLayout 
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:paddingRight="8dp"
                android:paddingLeft="8dp">
                
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="故障描述"
                    android:textSize="@dimen/main"
                    android:textColor="@color/color_gray_deep" />
                
            </RelativeLayout>
            
            <EditText
                android:id="@+id/et_repairs_describe"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:background="@drawable/bg_edittext"
                android:hint=""
                android:imeOptions="actionDone"
                android:inputType="none"
                android:maxLength="200"
                android:textColor="@color/color_gray_light"
                android:textSize="@dimen/main" >
            </EditText>
            
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp" >
                
                <ImageView
                    android:id="@+id/iv_repairs_image1"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_alignParentLeft="true"
                    android:contentDescription="@null"
                    android:src="@drawable/img_add" />
                
                <ImageView
                    android:id="@+id/iv_repairs_image2"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_centerInParent="true"
                    android:contentDescription="@null"
                    android:src="@drawable/img_add"
                    android:visibility="gone" />
                
                <ImageView
                    android:id="@+id/iv_repairs_image3"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_alignParentRight="true"
                    android:contentDescription="@null"
                    android:src="@drawable/img_add"
                    android:visibility="gone" />
                
            </RelativeLayout>
            
            <TextView
                android:layout_width="match_parent"
                android:layout_height="88dp"
                android:background="@color/color_white" />
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_layout_height_tab"
        android:background="@color/color_major_blue_tab" >

        <ImageView
            android:id="@+id/iv_repairs_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:contentDescription="@null"
            android:paddingLeft="@dimen/activity_padding_tab"
            android:paddingRight="@dimen/activity_padding_tab"
            android:src="@drawable/back_w" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="设备详情"
            android:textColor="@android:color/white"
            android:textSize="@dimen/tab" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:layout_alignParentBottom="true"
        android:background="@color/color_white_transparency"
        android:gravity="center_vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp" >

        <Button
            android:id="@+id/btn_repairs"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@color/color_major_blue"
            android:textColor="@color/color_white"
            android:textSize="@dimen/tab" />
    </LinearLayout>

</RelativeLayout>