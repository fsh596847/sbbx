<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/activity_padding_tab"
    android:paddingRight="@dimen/activity_padding_tab"
    android:paddingTop="4dp" >

    <ImageView
        android:id="@+id/imageView_item_device"
        android:layout_width="102dp"
        android:layout_height="102dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@null"
        android:layout_marginRight="8dp"
        android:contentDescription="@null" />

    <TextView
        android:id="@+id/textView_item_device_name"
        android:layout_width="wrap_content"
        android:layout_height="34dp"
        android:gravity="center_vertical"
        android:layout_alignTop="@id/imageView_item_device"
        android:layout_toRightOf="@id/imageView_item_device"
        android:textColor="@color/color_gray_deep"
        android:textSize="@dimen/main" />
    
    <TextView
        android:id="@+id/textView_item_device_code"
        android:layout_width="wrap_content"
        android:layout_height="34dp"
        android:gravity="center_vertical"
        android:layout_below="@id/textView_item_device_name"
        android:layout_toRightOf="@id/imageView_item_device"
        android:textColor="@color/color_gray"
        android:textSize="@dimen/main" />
    
    <TextView
        android:id="@+id/textView_item_device_type"
        android:layout_width="wrap_content"
        android:layout_height="34dp"
        android:gravity="center_vertical"
        android:layout_below="@id/textView_item_device_code"
        android:layout_toRightOf="@id/imageView_item_device"
        android:textColor="@color/color_gray"
        android:textSize="@dimen/main" />
    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_gray_bg"
        android:layout_marginTop="4dp"
        android:layout_below="@id/imageView_item_device" />

</RelativeLayout>
