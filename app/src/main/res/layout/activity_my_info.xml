<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_layout_height_tab"
        android:background="@color/color_major_blue_tab" >

        <ImageView
            android:id="@+id/iv_my_info_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:contentDescription="@null"
            android:paddingLeft="@dimen/activity_padding_tab"
            android:paddingRight="@dimen/activity_padding_tab"
            android:src="@drawable/back_w" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="我的资料"
            android:textColor="@android:color/white"
            android:textSize="@dimen/tab" />
        
        <Button
            android:id="@+id/btn_my_info_edit"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:text="编辑"
            android:textColor="@android:color/white"
            android:background="@null"
            android:paddingRight="8dp"
            android:paddingLeft="8dp"
            android:textSize="@dimen/main" />
    </RelativeLayout>
    
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:background="@color/color_gray_bg" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            
            <RelativeLayout 
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:paddingRight="8dp"
                android:paddingLeft="8dp"
                android:background="@color/color_white"
                android:layout_marginBottom="1dp">
                
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="头像"
                    android:textSize="@dimen/main"
                    android:textColor="@color/color_gray_deep" />
                
                <ImageView
                    android:id="@+id/iv_my_info"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:contentDescription="@null"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@color/color_gray_bg" />
                
            </RelativeLayout>
            
            <LinearLayout 
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:paddingLeft="8dp"
                android:background="@color/color_white"
                android:layout_marginBottom="1dp">
                
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="姓名"
                    android:textSize="@dimen/main"
                    android:textColor="@color/color_gray_deep" />
                
                <EditText
                    android:id="@+id/et_my_info_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:enabled="false"
                    android:gravity="center_vertical|right"
                    android:imeOptions="actionNext"
                    android:inputType="none"
                    android:lines="1"
                    android:maxLength="20"
                    android:paddingRight="8dp"
                    android:textColor="@color/color_gray_light"
                    android:textSize="@dimen/main" />
                
            </LinearLayout>
            
            <LinearLayout 
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:paddingRight="8dp"
                android:paddingLeft="8dp"
                android:background="@color/color_white"
                android:layout_marginBottom="1dp">
                
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="电话"
                    android:textSize="@dimen/main"
                    android:textColor="@color/color_gray_deep" />
                
                <EditText
                    android:id="@+id/et_my_info_phone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:enabled="false"
                    android:gravity="center_vertical|right"
                    android:imeOptions="actionNext"
                    android:inputType="phone"
                    android:lines="1"
                    android:maxLength="11"
                    android:paddingRight="8dp"
                    android:textColor="@color/color_gray_light"
                    android:textSize="@dimen/main" />
                
            </LinearLayout>
            
            <LinearLayout 
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:paddingRight="8dp"
                android:paddingLeft="8dp"
                android:background="@color/color_white"
                android:layout_marginBottom="1dp">
                
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="电子邮箱"
                    android:textSize="@dimen/main"
                    android:textColor="@color/color_gray_deep" />
                
                <EditText
                    android:id="@+id/et_my_info_email"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:enabled="false"
                    android:gravity="center_vertical|right"
                    android:imeOptions="actionNext"
                    android:inputType="textEmailAddress"
                    android:lines="1"
                    android:maxLength="30"
                    android:paddingRight="8dp"
                    android:textColor="@color/color_gray_light"
                    android:textSize="@dimen/main" />
                
            </LinearLayout>
            
            <LinearLayout 
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:paddingRight="8dp"
                android:paddingLeft="8dp"
                android:background="@color/color_white"
                android:layout_marginBottom="1dp">
                
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="联系地址"
                    android:textSize="@dimen/main"
                    android:textColor="@color/color_gray_deep" />
                
                <EditText
                    android:id="@+id/et_my_info_addrs"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:enabled="false"
                    android:gravity="center_vertical|right"
                    android:imeOptions="actionDone"
                    android:inputType="none"
                    android:lines="1"
                    android:maxLength="30"
                    android:paddingRight="8dp"
                    android:textColor="@color/color_gray_light"
                    android:textSize="@dimen/main" />
                
            </LinearLayout>
            
            <RelativeLayout 
                android:id="@+id/layout_my_info_company"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:paddingRight="8dp"
                android:paddingLeft="8dp"
                android:background="@color/color_white"
                android:layout_marginBottom="1dp">
                
                <TextView
                    android:id="@+id/tv_my_info_company_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/main"
                    android:textColor="@color/color_gray_deep" />
                
                <TextView
                    android:id="@+id/tv_my_info_company"
                    android:layout_width="wrap_content"
                    android:layout_height="34dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/main"
                    android:textColor="@color/color_gray_light" />
                
            </RelativeLayout>
            
        </LinearLayout>
    </ScrollView>

</LinearLayout>
